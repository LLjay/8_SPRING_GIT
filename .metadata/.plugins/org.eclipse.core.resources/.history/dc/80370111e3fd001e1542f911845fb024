<!-- namespace: 해당 mapper파일의 고유한 별칭 -->
<mapper namespace="boardMapper">
<select id="selectListCount" resultType="_int">
	SELECT COUNT(*)
	FROM BOARD
	WHERE STATUS = 'Y'
</select>
<select id="selectList" resultMap="Board">
	SELECT BOARD_NO,
		   BOARD_TITLE,
		   BOARD_WRITER,
		   BOARD_COUNT,
		   ORIGIN_NAME,
		   CREATE_DATE
	  FROM BOARD
	 WHERE STATUS = 'Y'
</select>
